# Use a more complete base image
FROM python:3.9

# Set the working directory in the container
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY . /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    build-essential \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1-mesa-glx \
    libhdf5-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir numpy scipy pandas matplotlib
RUN pip install --no-cache-dir scikit-learn scikit-image tqdm imageio
RUN pip install --no-cache-dir nilearn SimpleITK nibabel
RUN pip install --no-cache-dir tensorflow==2.10
RUN pip install --no-cache-dir itk-elastix intensity-normalization[ants] wandb jupyter opencv-python

# Explicitly install ITK
RUN pip install --no-cache-dir itk

# Set the environment variable for the Python path
ENV PYTHONPATH=/app

# Set the command to run your script
CMD ["python", "/app/executables/process_image.py"]
